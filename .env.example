# Onboard Hero Flagship Platform - Environment Configuration Template
# Copy this file to .env.local or .env.production and replace with actual credentials

# =============================================
# APP CONFIGURATION
# =============================================
NEXT_PUBLIC_APP_URL=https://your-app-url.com
NEXT_PUBLIC_APP_NAME=Onboard Hero
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================
# SUPABASE CONFIGURATION
# =============================================
# Replace with your Supabase project credentials
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
NEXT_PUBLIC_SUPABASE_PROJECT_REF=your-project-ref

# =============================================
# STRIPE CONFIGURATION
# =============================================
# Replace with your Stripe keys
STRIPE_SECRET_KEY=your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# =============================================
# AUTHENTICATION
# =============================================
NEXTAUTH_SECRET=your-nextauth-secret-32-chars-minimum
NEXTAUTH_URL=https://your-app-url.com

# =============================================
# EMAIL SERVICES
# =============================================
# RESEND (Primary email service)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Onboard Hero

# =============================================
# DOCUMENT SIGNING (BOLDSIGN)
# =============================================
BOLDSIGN_API_KEY=your-boldsign-api-key
BOLDSIGN_BASE_URL=https://api.boldsign.com
BOLDSIGN_WEBHOOK_SECRET=your-boldsign-webhook-secret

# =============================================
# SMS SERVICES (TWILIO)
# =============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================
# REDIS CACHE (UPSTASH)
# =============================================
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# =============================================
# AI SERVICES
# =============================================
# OpenAI for AI-powered features
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION_ID=your-openai-org-id

# =============================================
# NYLAS INTEGRATION
# =============================================
# Nylas API for advanced email, calendar, and contact management
NYLAS_API_KEY=your-nylas-api-key
NYLAS_API_URI=https://api.nylas.com
NYLAS_WEBHOOK_SECRET=your-nylas-webhook-secret
NYLAS_APPLICATION_ID=your-nylas-application-id

# Nylas OAuth Configuration
NYLAS_CLIENT_ID=your-nylas-client-id
NYLAS_CLIENT_SECRET=your-nylas-client-secret
NYLAS_REDIRECT_URI=https://app.yourdomain.com/api/integrations/nylas/callback

# Nylas Features Configuration
NYLAS_ENABLE_EMAIL_TRACKING=true
NYLAS_ENABLE_CALENDAR_SYNC=true
NYLAS_ENABLE_CONTACT_SYNC=true
NYLAS_ENABLE_SCHEDULING=true
NYLAS_DEFAULT_TIMEZONE=America/New_York

# =============================================
# CRM INTEGRATIONS
# =============================================
# Salesforce
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_REDIRECT_URI=https://app.yourdomain.com/api/integrations/salesforce/callback

# HubSpot
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_REDIRECT_URI=https://app.yourdomain.com/api/integrations/hubspot/callback

# Pipedrive
PIPEDRIVE_CLIENT_ID=your-pipedrive-client-id
PIPEDRIVE_CLIENT_SECRET=your-pipedrive-client-secret
PIPEDRIVE_REDIRECT_URI=https://app.yourdomain.com/api/integrations/pipedrive/callback

# =============================================
# EMAIL MARKETING INTEGRATIONS
# =============================================
# Mailchimp
MAILCHIMP_CLIENT_ID=your-mailchimp-client-id
MAILCHIMP_CLIENT_SECRET=your-mailchimp-client-secret

# ConvertKit
CONVERTKIT_API_KEY=your-convertkit-api-key
CONVERTKIT_API_SECRET=your-convertkit-api-secret

# =============================================
# CALENDAR INTEGRATIONS
# =============================================
# Google Calendar
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://app.yourdomain.com/api/integrations/google/callback

# Microsoft Outlook
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=https://app.yourdomain.com/api/integrations/microsoft/callback

# =============================================
# FILE STORAGE
# =============================================
# AWS S3 for file storage
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudinary for image processing
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_URL=your-cloudinary-url

# =============================================
# MONITORING AND ANALYTICS
# =============================================
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=onboardhero

# PostHog for product analytics
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your-ga-measurement-id

# =============================================
# SECURITY
# =============================================
# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# CORS origins
CORS_ORIGINS=https://app.yourdomain.com,https://yourdomain.com

# =============================================
# FEATURE FLAGS
# =============================================
FEATURE_AI_INSIGHTS=true
FEATURE_MOBILE_APPS=true
FEATURE_WHITE_LABEL=true
FEATURE_ENTERPRISE_SSO=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_WORKFLOW_AUTOMATION=true
FEATURE_TEMPLATE_MARKETPLACE=true

# =============================================
# DEPLOYMENT CONFIGURATION
# =============================================
NODE_ENV=development
VERCEL_ENV=development
DEPLOYMENT_PLATFORM=vercel

# Database connection (if using direct PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# =============================================
# WEBHOOK ENDPOINTS
# =============================================
WEBHOOK_SECRET=your-webhook-secret-for-security
STRIPE_WEBHOOK_ENDPOINT=https://app.yourdomain.com/api/webhooks/stripe
BOLDSIGN_WEBHOOK_ENDPOINT=https://app.yourdomain.com/api/webhooks/boldsign

# =============================================
# BACKUP AND RECOVERY
# =============================================
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_S3_BUCKET=your-backup-bucket-name
BACKUP_SCHEDULE=daily  # Daily at 2 AM UTC

# =============================================
# COMPLIANCE
# =============================================
GDPR_ENABLED=true
HIPAA_ENABLED=true
SOC2_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=2555

# =============================================
# PERFORMANCE
# =============================================
CACHE_TTL_SECONDS=3600
CDN_URL=https://cdn.yourdomain.com
IMAGE_OPTIMIZATION=true
COMPRESSION_ENABLED=true

# =============================================
# LOCALIZATION
# =============================================
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de,it,pt,ja,ko,zh
TRANSLATION_SERVICE=google-translate

# =============================================
# NOTIFICATIONS
# =============================================
PUSH_NOTIFICATION_VAPID_PUBLIC_KEY=your-vapid-public-key
PUSH_NOTIFICATION_VAPID_PRIVATE_KEY=your-vapid-private-key
PUSH_NOTIFICATION_VAPID_SUBJECT=mailto:admin@yourdomain.com